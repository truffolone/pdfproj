        <h1 class="pdfMainPageTitle blackSectionTitle">{% trans %}Applications{% endtrans %}</h1>
        <hr class="afterTitle">
        <br><br>
        {% for category in categories %}
            {% if category.active %}
                <h4 class="applicationListTitle">{{ category.name }}</h4>
                <p class="applicationListText">
                    {% for app in category.applications %}
                        â€¢ {{ app.name }}
                    {% endfor %}
                </p>
            {% endif %}
        {% endfor %}
   </div>
